                        <input type="date" class="form-control" id="inputData" placeholder="Дедлайн">
                    </div>
                </div>

                <div class="form-group">
                    <label for="tagsInput" class="col-lg-2 control-label">Теги:</label>
                    <div class="col-lg-10">
                        <select multiple="2" id="tagsInput" class="form-control">
                            <option>Срочное</option>
                            <option>Важное</option>
                        </select>

                    </div>
                </div>




                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="reset" class="btn btn-default">Отмена</button>
                        <button type="submit" class="btn btn-primary">Добавить</button>
                    </div>
                </div>
            </fieldset>
        </form>




    </div>
</aside>

