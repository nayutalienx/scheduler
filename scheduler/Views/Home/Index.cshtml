@{
    ViewBag.Title = "Планировщик";
}

<aside id="task-form">
    <div>

        


        <form class="form-horizontal">
            <fieldset>

                <div class="form-group">
                    <label for="inputTaskName" class="col-lg-2 control-label">Task</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="inputTaskName" placeholder="Task name">
                    </div>
                </div>

                <div class="form-group">
                    <label for="taskDescription" class="col-lg-2 control-label">Description</label>
                    <div class="col-lg-10">
                        <textarea class="form-control" rows="3" id="taskDescription"></textarea>
                        <span class="help-block">Write important information about your task.</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="directionOfTask" class="col-lg-2 control-label">Add to</label>
                    <div class="col-lg-10">
                        <select class="form-control" id="directionOfTask">
                            <option>Current</option>
                            <option>All tasks</option>
                            <option>Expired tasks</option>
                        </select>

                    </div>
                </div>




                <div class="form-group">
                    <label for="inputDate" class="col-lg-2 control-label">Deadline:</label>
                    <div class="col-lg-10">
                        <input type="date" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label for="tagsInput" class="col-lg-2 control-label">Tags:</label>
                    <div class="col-lg-10">
                        <select multiple="" id="tagsInput" class="form-control">
                            <option>Срочные</option>
                            <option>Несрочные</option>
                            <option>Важные</option>
                            <option>Неважные</option>
                        </select>

                    </div>
                </div>




                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="reset" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add to list</button>
                    </div>
                </div>
            </fieldset>
        </form>




    </div>
</aside>

